pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Check out your code from the Git repository
                checkout scm
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Load and run the Groovy script containing the deploy method
                    def myScript = load 'example.groovy'
                    myScript.deploy("PROD")
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Load and run the Groovy script containing the build method
                    def myScript = load 'example.groovy'
                    myScript.build("some_parameter_value")
                }
            }
        }
    }
}
